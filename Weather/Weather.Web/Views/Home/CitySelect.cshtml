<script>
    function selectedCity(id) {
        var areaID = $(id).attr("id");
        var areaName = $(id).attr("data-areaname");
        window.location.href = "/Home/?cityCode=" + areaID + "&cityName=" + areaName;
    }
    $(function () {
        $("#txtCityName").querycity({ 'cityList': cityList });

        $(document).on('tap', '.col-xs-4', function () {

            var s = $(this);
            selectedCity(s.find('span')[0]);

        });
    });
</script>
